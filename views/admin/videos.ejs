.storage-status {
    background: rgba(102, 126, 234, 0.05);
    border: 1px solid rgba(102, 126, 234, 0.2);
    border-radius: 12px;
    padding: 15px;
    margin-top: 15px;
}

.status-header {
    display: flex;
    align-items: center;
    gap: 8px;
    font-weight: 600;
    color: #667eea;
    margin-bottom: 10px;
    font-size: 14px;
}

.status-content {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.status-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 13px;
}

.status-item .label {
    color: #666;
}

.status-item .value {
    font-weight: 500;
    color: #333;
}

.file-preview {
    margin-top: 15px;
    padding: 15px;
    background: rgba(0, 0, 0, 0.02);
    border: 1px solid #eee;
    border-radius: 8px;
}

.file-info {
    display: flex;
    align-items: center;
    gap: 15px;
}

.file-icon {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, #667eea, #764ba2);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 18px;
}

.file-details {
    flex: 1;
}

.file-name {
    font-weight: 600;
    color: #333;
    margin-bottom: 4px;
    word-break: break-word;
}

.file-meta {
    display: flex;
    gap: 15px;
    font-size: 12px;
    color: #666;
}

.file-status {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 13px;
    font-weight: 500;
}

.progress-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 8px;
    font-size: 14px;
}

.progress-details {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 8px;
    font-size: 12px;
}

.upload-eta {
    color: #666;
    font-style: italic;
}

.text-success {
    color: #27ae60 !important;
}

.text-warning {
    color: #f39c12 !important;
}

@media (max-width: 768px) {
    .file-info {
        flex-direction: column;
        text-align: center;
        gap: 10px;
    }
    
    .file-meta {
        justify-content: center;
    }
    
    .progress-header,
    .progress-details {
        flex-direction: column;
        gap: 5px;
        text-align: center;
    }
}
</style>
