            // Toggle ad status
            async function toggleAdStatus(adId) {
                if (!adId) return;
                
                try {
                    const response = await fetch(`/admin/ads/${adId}/toggle`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
