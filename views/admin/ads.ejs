            }

            // Update ad status UI
            function updateAdStatusUI(adId, isActive) {
                // Update status text
                const statusText = document.querySelector(`tr[data-ad-id="${adId}"] .status-text`);
                if (statusText) {
                    statusText.textContent = isActive ? 'Active' : 'Inactive';
                    statusText.className = `status-text ${isActive ? 'active' : 'inactive'}`;
                }
                
                // Update status indicator in grid view
                const statusIndicator = document.querySelector(`.ad-card[data-ad-id="${adId}"] .status-indicator`);
                if (statusIndicator) {
                    statusIndicator.className = `status-indicator ${isActive ? 'active' : 'inactive'}`;
                }
                
                // Update action buttons
                const actionButtons = document.querySelectorAll(`[onclick*="toggleAdStatus(${adId})"]`);
                actionButtons.forEach(btn => {
                    btn.className = btn.className.replace(/btn-(success|danger)/, isActive ? 'btn-danger' : 'btn-success');
                    btn.title = isActive ? 'Deactivate' : 'Activate';
                    const icon = btn.querySelector('i');
                    if (icon) {
                        icon.className = `fas fa-${isActive ? 'pause' : 'play'}`;
                    }
                });
            }

            // Revert status toggle
            function revertStatusToggle(adId) {
                const checkbox = document.querySelector(`input[onchange*="${adId}"]`);
                if (checkbox) {
                    checkbox.checked = !checkbox.checked;
                }
