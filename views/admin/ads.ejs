<!-- views/admin/ads.ejs - Part 1: Header & Main Structure -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Admin Dashboard</title>
    
    <!-- Include your existing admin CSS -->
    <link rel="stylesheet" href="/css/admin.css">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <!-- Ads Management Specific Styles -->
    <style>
        /* Reset and Base Styles */
        * {
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .container-fluid {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Admin Header */
        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid #e9ecef;
            flex-wrap: wrap;
            gap: 20px;
        }

        .header-left h1 {
            margin: 0 0 8px 0;
            color: #2c3e50;
            font-size: 28px;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .header-left p {
            margin: 0;
            color: #6c757d;
            font-size: 16px;
        }

        .header-actions {
            display: flex;
            gap: 12px;
            align-items: center;
            flex-wrap: wrap;
        }

        /* Buttons */
        .btn {
            padding: 10px 16px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            font-size: 14px;
            font-weight: 500;
            transition: all 0.2s ease;
            text-align: center;
            white-space: nowrap;
            line-height: 1.4;
        }

        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        }

        .btn:active {
            transform: translateY(0);
        }

        .btn-primary { background: #007bff; color: white; }
        .btn-primary:hover { background: #0056b3; }

        .btn-success { background: #28a745; color: white; }
        .btn-success:hover { background: #1e7e34; }

        .btn-warning { background: #ffc107; color: #212529; }
        .btn-warning:hover { background: #d39e00; }

        .btn-danger { background: #dc3545; color: white; }
        .btn-danger:hover { background: #bd2130; }

        .btn-info { background: #17a2b8; color: white; }
        .btn-info:hover { background: #138496; }

        .btn-secondary { background: #6c757d; color: white; }
        .btn-secondary:hover { background: #545b62; }

        .btn-xs {
            padding: 4px 8px;
            font-size: 12px;
            min-width: auto;
        }

        .btn-sm {
            padding: 6px 12px;
            font-size: 13px;
        }

        .btn-lg {
            padding: 14px 28px;
            font-size: 16px;
        }

        /* Stats Grid */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: white;
            padding: 24px;
            border-radius: 12px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
            display: flex;
            align-items: center;
            gap: 16px;
            transition: all 0.3s ease;
            border: 1px solid #e9ecef;
        }

        .stat-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 20px rgba(0,0,0,0.12);
        }

        .stat-icon {
            width: 56px;
            height: 56px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
            background: #f8f9fa;
            font-size: 24px;
            flex-shrink: 0;
        }

        .stat-content h3 {
            margin: 0 0 4px 0;
            font-size: 28px;
            font-weight: 700;
            color: #2c3e50;
            line-height: 1.2;
        }

        .stat-content p {
            margin: 0;
            color: #6c757d;
            font-size: 14px;
            font-weight: 500;
        }

        /* Filters Card */
        .filters-card {
            background: white;
            padding: 24px;
            border-radius: 12px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
            margin-bottom: 30px;
            border: 1px solid #e9ecef;
        }

        .filters-form {
            display: flex;
            gap: 20px;
            align-items: end;
            flex-wrap: wrap;
        }

        .filter-group {
            display: flex;
            flex-direction: column;
            gap: 6px;
            min-width: 140px;
        }

        .filter-group label {
            font-weight: 600;
            color: #2c3e50;
            font-size: 14px;
        }

        .filter-group select {
            padding: 10px 12px;
            border: 1px solid #ced4da;
            border-radius: 6px;
            font-size: 14px;
            background: white;
            color: #495057;
            transition: border-color 0.2s ease;
        }

        .filter-group select:focus {
            outline: none;
            border-color: #007bff;
            box-shadow: 0 0 0 2px rgba(0,123,255,0.25);
        }

        .filter-actions {
            display: flex;
            gap: 12px;
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <!-- Page Header -->
        <div class="admin-header">
            <div class="header-left">
                <h1>
                    <i class="fas fa-bullhorn"></i>
                    Manage Advertisements
                </h1>
                <p>Create and manage ad campaigns for your video platform</p>
            </div>
            <div class="header-actions">
                <button class="btn btn-info" onclick="refreshData()">
                    <i class="fas fa-sync-alt"></i>
                    Refresh
                </button>
                <a href="/admin/ads/create" class="btn btn-success">
                    <i class="fas fa-plus"></i>
                    Create New Ad
                </a>
                <button class="btn btn-warning" onclick="showBulkActions()">
                    <i class="fas fa-tasks"></i>
                    Bulk Actions
                </button>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon" style="background: #e3f2fd;">
                    <i class="fas fa-eye" style="color: #1976d2;"></i>
                </div>
                <div class="stat-content">
                    <h3 id="totalImpressions">0</h3>
                    <p>Total Impressions</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon" style="background: #ffebee;">
                    <i class="fas fa-mouse-pointer" style="color: #d32f2f;"></i>
                </div>
                <div class="stat-content">
                    <h3 id="totalClicks">0</h3>
                    <p>Total Clicks</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon" style="background: #e8f5e8;">
                    <i class="fas fa-chart-line" style="color: #388e3c;"></i>
                </div>
                <div class="stat-content">
                    <h3 id="averageCTR">0%</h3>
                    <p>Average CTR</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon" style="background: #fff3e0;">
                    <i class="fas fa-toggle-on" style="color: #f57c00;"></i>
                </div>
                <div class="stat-content">
                    <h3 id="activeAds">0</h3>
                    <p>Active Ads</p>
                </div>
            </div>
        </div>

        <!-- Filters -->
        <div class="filters-card">
            <form method="GET" action="/admin/ads" class="filters-form">
                <div class="filter-group">
                    <label for="status">Status:</label>
                    <select name="status" id="status">
                        <option value="">All Status</option>
                        <option value="active" <%= (typeof filters !== 'undefined' && filters && filters.status === 'active') ? 'selected' : '' %>>Active</option>
                        <option value="inactive" <%= (typeof filters !== 'undefined' && filters && filters.status === 'inactive') ? 'selected' : '' %>>Inactive</option>
                    </select>
                </div>
                
                <div class="filter-group">
                    <label for="slot">Slot Position:</label>
                    <select name="slot" id="slot">
                        <option value="">All Slots</option>
                        <option value="1" <%= (typeof filters !== 'undefined' && filters && filters.slot == 1) ? 'selected' : '' %>>Slot 1</option>
                        <option value="2" <%= (typeof filters !== 'undefined' && filters && filters.slot == 2) ? 'selected' : '' %>>Slot 2</option>
                        <option value="3" <%= (typeof filters !== 'undefined' && filters && filters.slot == 3) ? 'selected' : '' %>>Slot 3</option>
                        <option value="4" <%= (typeof filters !== 'undefined' && filters && filters.slot == 4) ? 'selected' : '' %>>Slot 4</option>
                        <option value="5" <%= (typeof filters !== 'undefined' && filters && filters.slot == 5) ? 'selected' : '' %>>Slot 5</option>
                    </select>
                </div>
                
                <div class="filter-group">
                    <label for="type">Type:</label>
                    <select name="type" id="type">
                        <option value="">All Types</option>
                        <option value="image" <%= (typeof filters !== 'undefined' && filters && filters.type === 'image') ? 'selected' : '' %>>Image</option>
                        <option value="video" <%= (typeof filters !== 'undefined' && filters && filters.type === 'video') ? 'selected' : '' %>>Video</option>
                        <option value="google_ads" <%= (typeof filters !== 'undefined' && filters && filters.type === 'google_ads') ? 'selected' : '' %>>Google Ads</option>
                    </select>
                </div>
                
                <div class="filter-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i>
                        Filter
                    </button>
                    <a href="/admin/ads" class="btn btn-secondary">
                        <i class="fas fa-times"></i>
                        Clear
                    </a>
                </div>
            </form>
        </div>
        <!-- Ad Slots Overview -->
        <div class="slots-overview">
            <div class="slots-header">
                <h3>
                    <i class="fas fa-th-large"></i>
                    Ad Slots Overview
                </h3>
                <button class="btn btn-sm btn-info" onclick="previewAllSlots()">
                    <i class="fas fa-eye"></i>
                    Preview All
                </button>
            </div>
            <div class="slots-grid">
                <% for (let i = 1; i <= 5; i++) { %>
                    <div class="slot-card" data-slot="<%= i %>">
                        <div class="slot-header">
                            <h4>Slot <%= i %></h4>
                            <span class="slot-timing">After every 3 videos</span>
                        </div>
                        <div class="slot-status">
                            <% 
                                // Safe check for ads array
                                let slotAd = null;
                                if (typeof ads !== 'undefined' && Array.isArray(ads)) {
                                    slotAd = ads.find(ad => ad && ad.slot_position === i && ad.is_active);
                                }
                                
                                if (slotAd) {
                            %>
                                <div class="status-active">
                                    <i class="fas fa-check-circle"></i>
                                    <span>Active</span>
                                </div>
                                <div class="slot-info">
                                    <strong><%= slotAd.title || 'Untitled Ad' %></strong>
                                    <span class="type-badge type-<%= slotAd.type || 'unknown' %>">
                                        <i class="fas fa-<%= slotAd.type === 'video' ? 'video' : slotAd.type === 'google_ads' ? 'code' : 'image' %>"></i>
                                        <%= slotAd.type || 'unknown' %>
                                    </span>
                                    <div class="slot-stats">
                                        <span><i class="fas fa-eye"></i> <%= slotAd.impressions_count || 0 %></span>
                                        <% if (slotAd.type !== 'google_ads') { %>
                                            <span><i class="fas fa-mouse-pointer"></i> <%= slotAd.clicks_count || 0 %></span>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="slot-actions">
                                    <button onclick="quickEditAd(<%= slotAd.id %>)" class="btn btn-xs btn-warning" title="Quick Edit">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button onclick="previewAd(<%= slotAd.id %>)" class="btn btn-xs btn-info" title="Preview">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button onclick="toggleAdStatus(<%= slotAd.id %>)" class="btn btn-xs <%= slotAd.is_active ? 'btn-danger' : 'btn-success' %>" title="<%= slotAd.is_active ? 'Deactivate' : 'Activate' %>">
                                        <i class="fas fa-<%= slotAd.is_active ? 'pause' : 'play' %>"></i>
                                    </button>
                                </div>
                            <% } else { %>
                                <div class="status-empty">
                                    <i class="fas fa-exclamation-triangle"></i>
                                    <span>Empty</span>
                                </div>
                                <a href="/admin/ads/create?slot=<%= i %>" class="btn btn-sm btn-primary">
                                    <i class="fas fa-plus"></i>
                                    Add Ad
                                </a>
                            <% } %>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Continue with CSS for Slots Overview -->
        <style>
            /* Slots Overview Styles */
            .slots-overview {
                background: white;
                padding: 28px;
                border-radius: 12px;
                box-shadow: 0 2px 12px rgba(0,0,0,0.08);
                margin-bottom: 30px;
                border: 1px solid #e9ecef;
            }

            .slots-header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 24px;
                flex-wrap: wrap;
                gap: 16px;
            }

            .slots-header h3 {
                margin: 0;
                color: #2c3e50;
                font-size: 20px;
                font-weight: 600;
                display: flex;
                align-items: center;
                gap: 10px;
            }

            .slots-grid {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
                gap: 20px;
            }

            .slot-card {
                background: #f8f9fa;
                border: 2px solid #e9ecef;
                border-radius: 12px;
                padding: 20px;
                text-align: center;
                transition: all 0.3s ease;
                position: relative;
            }

            .slot-card:hover {
                border-color: #007bff;
                transform: translateY(-3px);
                box-shadow: 0 6px 20px rgba(0,0,0,0.1);
            }

            .slot-header h4 {
                margin: 0 0 6px 0;
                color: #2c3e50;
                font-size: 18px;
                font-weight: 600;
            }

            .slot-timing {
                font-size: 12px;
                color: #6c757d;
                font-weight: 500;
            }

            .slot-status {
                margin-top: 20px;
            }

            .status-active {
                color: #28a745;
                font-weight: 600;
                margin-bottom: 12px;
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 6px;
                font-size: 14px;
            }

            .status-empty {
                color: #dc3545;
                font-weight: 600;
                margin-bottom: 12px;
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 6px;
                font-size: 14px;
            }

            .slot-info {
                margin-bottom: 16px;
                padding: 12px;
                background: white;
                border-radius: 8px;
                border: 1px solid #e9ecef;
            }

            .slot-info strong {
                display: block;
                font-size: 14px;
                font-weight: 600;
                margin-bottom: 8px;
                color: #2c3e50;
            }

            .type-badge {
                display: inline-flex;
                align-items: center;
                gap: 4px;
                padding: 4px 8px;
                font-size: 11px;
                font-weight: 600;
                border-radius: 12px;
                text-transform: uppercase;
                margin-bottom: 8px;
            }

            .type-image {
                background: #e8f5e8;
                color: #388e3c;
            }

            .type-video {
                background: #e3f2fd;
                color: #1976d2;
            }

            .type-google_ads {
                background: #fff3e0;
                color: #f57c00;
            }

            .type-unknown {
                background: #f0f0f0;
                color: #666;
            }

            .slot-stats {
                display: flex;
                justify-content: center;
                gap: 12px;
                margin-top: 8px;
                font-size: 12px;
                color: #6c757d;
            }

            .slot-stats span {
                display: flex;
                align-items: center;
                gap: 4px;
            }

            .slot-actions {
                display: flex;
                justify-content: center;
                gap: 6px;
                margin-top: 12px;
            }
        </style>
        <!-- Ads Table -->
        <div class="table-card">
            <div class="table-header">
                <div class="table-title">
                    <h3>
                        <i class="fas fa-list"></i>
                        All Advertisements
                    </h3>
                    <div class="table-stats">
                        Total: <strong><%= (typeof pagination !== 'undefined' && pagination && pagination.total) ? pagination.total : 0 %></strong> ads
                        | Active: <strong id="activeCount">0</strong>
                        | Inactive: <strong id="inactiveCount">0</strong>
                    </div>
                </div>
                <div class="table-actions">
                    <button class="btn btn-sm btn-secondary" onclick="selectAllAds()">
                        <i class="fas fa-check-square"></i>
                        Select All
                    </button>
                    <button class="btn btn-sm btn-warning" onclick="exportAds()">
                        <i class="fas fa-download"></i>
                        Export
                    </button>
                    <div class="view-toggle">
                        <button class="btn btn-xs btn-secondary active" onclick="setTableView('table')" id="viewTable">
                            <i class="fas fa-table"></i>
                        </button>
                        <button class="btn btn-xs btn-secondary" onclick="setTableView('grid')" id="viewGrid">
                            <i class="fas fa-th"></i>
                        </button>
                    </div>
                </div>
            </div>
            
            <% 
                // Safe check for ads array
                const safeAds = (typeof ads !== 'undefined' && Array.isArray(ads)) ? ads : [];
                if (safeAds.length > 0) { 
            %>
                <!-- Table View -->
                <div id="tableView" class="table-responsive">
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th width="40">
                                    <input type="checkbox" id="selectAllCheckbox" onchange="toggleSelectAll()">
                                </th>
                                <th width="80">Media</th>
                                <th>Ad Details</th>
                                <th width="80">Slot</th>
                                <th width="100">Performance</th>
                                <th width="100">Status</th>
                                <th width="120">Created</th>
                                <th width="140">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% safeAds.forEach(ad => { 
                                // Safety check for each ad object
                                if (!ad) return;
                            %>
                                <tr data-ad-id="<%= ad.id || '' %>" class="ad-row">
                                    <td>
                                        <input type="checkbox" class="ad-checkbox" value="<%= ad.id || '' %>">
                                    </td>
                                    
                                    <td>
                                        <% if (ad.type === 'google_ads') { %>
                                            <div class="media-preview google-ads-preview" onclick="showGoogleAdsPreview('<%= ad.id %>', '<%= (ad.title || '').replace(/'/g, '&quot;') %>')">
                                                <div class="google-ads-icon">
                                                    <i class="fas fa-code"></i>
                                                </div>
                                            </div>
                                        <% } else { %>
                                            <div class="media-preview" onclick="showMediaPreview('<%= ad.media_url || '' %>', '<%= ad.type || 'image' %>', '<%= (ad.title || '').replace(/'/g, '&quot;') %>')">
                                                <% if (ad.type === 'image') { %>
                                                    <img src="<%= ad.media_url || '/images/placeholder.jpg' %>" alt="<%= ad.title || 'Ad Image' %>" class="preview-image">
                                                <% } else if (ad.type === 'video') { %>
                                                    <video class="preview-video" muted>
                                                        <source src="<%= ad.media_url || '' %>" type="video/mp4">
                                                    </video>
                                                    <div class="video-indicator">
                                                        <i class="fas fa-play"></i>
                                                    </div>
                                                <% } %>
                                            </div>
                                        <% } %>
                                    </td>
                                    
                                    <td>
                                        <div class="ad-info">
                                            <strong class="ad-title"><%= ad.title || 'Untitled Ad' %></strong>
                                            <% if (ad.description) { %>
                                                <p class="ad-description" title="<%= ad.description %>">
                                                    <%= ad.description.length > 50 ? ad.description.substring(0, 50) + '...' : ad.description %>
                                                </p>
                                            <% } %>
                                            
                                            <div class="ad-meta">
                                                <span class="type-badge type-<%= ad.type || 'unknown' %>">
                                                    <i class="fas fa-<%= ad.type === 'video' ? 'video' : ad.type === 'google_ads' ? 'code' : 'image' %>"></i>
                                                    <%= ad.type || 'unknown' %>
                                                    <% if (ad.type === 'video' && ad.duration) { %>
                                                        (<%= ad.duration %>s)
                                                    <% } %>
                                                </span>
                                            </div>
                                            
                                            <% if (ad.click_url && ad.type !== 'google_ads') { %>
                                                <div class="click-url-info">
                                                    <a href="<%= ad.click_url %>" target="_blank" class="click-url" title="<%= ad.click_url %>">
                                                        <i class="fas fa-external-link-alt"></i>
                                                        <%= ad.click_url.length > 30 ? ad.click_url.substring(0, 30) + '...' : ad.click_url %>
                                                    </a>
                                                    <span class="url-target <%= ad.open_new_tab ? 'new-tab' : 'same-tab' %>">
                                                        <i class="fas fa-<%= ad.open_new_tab ? 'external-link-alt' : 'link' %>"></i>
                                                        <%= ad.open_new_tab ? 'New Tab' : 'Same Tab' %>
                                                    </span>
                                                </div>
                                            <% } else if (ad.type === 'google_ads') { %>
                                                <div class="google-ads-info">
                                                    <span class="google-ads-label">
                                                        <i class="fas fa-google"></i>
                                                        Google Ads Script
                                                    </span>
                                                </div>
                                            <% } %>
                                        </div>
                                    </td>
                                    
                                    <td>
                                        <span class="slot-badge slot-<%= ad.slot_position || 1 %>">
                                            Slot <%= ad.slot_position || 1 %>
                                        </span>
                                    </td>
                                    
                                    <td>
                                        <div class="performance-stats">
                                            <div class="stat-item">
                                                <i class="fas fa-eye"></i>
                                                <span><%= ad.impressions_count || 0 %></span>
                                            </div>
                                            <% if (ad.type !== 'google_ads') { %>
                                                <div class="stat-item">
                                                    <i class="fas fa-mouse-pointer"></i>
                                                    <span><%= ad.clicks_count || 0 %></span>
                                                </div>
                                                <div class="ctr">
                                                    <% 
                                                        const impressions = ad.impressions_count || 0;
                                                        const clicks = ad.clicks_count || 0;
                                                        const ctr = impressions > 0 ? ((clicks / impressions) * 100).toFixed(2) : 0;
                                                    %>
                                                    CTR: <%= ctr %>%
                                                </div>
                                            <% } else { %>
                                                <div class="stat-item google-ads-stat">
                                                    <i class="fas fa-google"></i>
                                                    <span>Google Ads</span>
                                                </div>
                                            <% } %>
                                        </div>
                                    </td>
                                    
                                    <td>
                                        <div class="status-container">
                                            <label class="status-toggle">
                                                <input type="checkbox" <%= ad.is_active ? 'checked' : '' %> 
                                                       onchange="toggleAdStatus(<%= ad.id || 0 %>)">
                                                <span class="toggle-slider"></span>
