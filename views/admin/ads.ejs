            // Load dashboard stats with error handling
            async function loadStats() {
                try {
                    const response = await fetch('/api/admin/ads/summary');
                    if (response.ok) {
                        const data = await response.json();
                        if (data.success) {
                            updateStatsDisplay(data.data);
                        } else {
                            console.warn('Stats API returned error:', data.message);
                        }
                    } else {
                        console.warn('Stats API request failed:', response.status);
                    }
                } catch (error) {
                    console.error('Failed to load stats:', error);
                    // Don't show error notification for stats loading failure
                }
            }

            // Update stats display with safe fallbacks
            function updateStatsDisplay(stats) {
                try {
                    const elements = {
                        totalImpressions: document.getElementById('totalImpressions'),
                        totalClicks: document.getElementById('totalClicks'),
                        averageCTR: document.getElementById('averageCTR'),
                        activeAds: document.getElementById('activeAds'),
                        activeCount: document.getElementById('activeCount'),
                        inactiveCount: document.getElementById('inactiveCount')
                    };

                    if (elements.totalImpressions) {
                        elements.totalImpressions.textContent = (stats.total_impressions || 0).toLocaleString();
                    }
                    if (elements.totalClicks) {
                        elements.totalClicks.textContent = (stats.total_clicks || 0).toLocaleString();
                    }
                    if (elements.averageCTR) {
                        elements.averageCTR.textContent = (stats.overall_ctr || 0) + '%';
                    }
                    if (elements.activeAds) {
                        elements.activeAds.textContent = stats.active_ads || 0;
                    }
                    if (elements.activeCount) {
                        elements.activeCount.textContent = stats.active_ads || 0;
                    }
                    if (elements.inactiveCount) {
                        elements.inactiveCount.textContent = stats.inactive_ads || 0;
                    }
                } catch (error) {
                    console.error('Failed to update stats display:', error);
                }
            }

            // Initialize event listeners with error handling
            function initializeEventListeners() {
                try {
                    // Video hover effects
                    document.querySelectorAll('.preview-video').forEach(video => {
                        video.addEventListener('mouseenter', function() {
                            this.play().catch(console.warn);
                        });
                        
                        video.addEventListener('mouseleave', function() {
                            this.pause();
                            this.currentTime = 0;
                        });
                    });

                    // Checkbox change events
                    document.querySelectorAll('.ad-checkbox').forEach(checkbox => {
                        checkbox.addEventListener('change', updateSelectedAds);
                    });
                    
                    console.log(' Event listeners initialized');
                } catch (error) {
                    console.error('Failed to initialize event listeners:', error);
                }
            }

            // Refresh data
            function refreshData() {
                showNotification('Refreshing data...', 'info');
                setTimeout(() => {
                    window.location.reload();
                }, 1000);
            }

            // Show bulk actions
            function showBulkActions() {
                updateSelectedAds();
                if (selectedAds.length === 0) {
                    showNotification('Please select ads first', 'warning');
                    return;
                }
                
                const selectedCountEl = document.getElementById('selectedCount');
                if (selectedCountEl) {
                    selectedCountEl.textContent = selectedAds.length;
                }
                
                const modal = document.getElementById('bulkActionsModal');
                if (modal) {
                    modal.style.display = 'block';
                }
            }

            // Update selected ads
            function updateSelectedAds() {
                selectedAds = Array.from(document.querySelectorAll('.ad-checkbox:checked')).map(cb => parseInt(cb.value));
            }

            // Select all ads
            function selectAllAds() {
                const checkboxes = document.querySelectorAll('.ad-checkbox');
                const allChecked = Array.from(checkboxes).every(cb => cb.checked);
                
                checkboxes.forEach(checkbox => {
                    checkbox.checked = !allChecked;
                });
                
                // Also update main checkbox
                const selectAllCheckbox = document.getElementById('selectAllCheckbox');
                if (selectAllCheckbox) {
                    selectAllCheckbox.checked = !allChecked;
                }
                
                updateSelectedAds();
                showNotification(`${allChecked ? 'Deselected' : 'Selected'} all ads`, 'info');
            }

            // Toggle select all checkbox
            function toggleSelectAll() {
                const selectAllCheckbox = document.getElementById('selectAllCheckbox');
                const checkboxes = document.querySelectorAll('.ad-checkbox');
                
                if (selectAllCheckbox) {
                    checkboxes.forEach(checkbox => {
                        checkbox.checked = selectAllCheckbox.checked;
                    });
                    
                    updateSelectedAds();
                }
            }

            // Set table view
            function setTableView(view) {
                currentView = view;
                
                const tableView = document.getElementById('tableView');
                const gridView = document.getElementById('gridView');
                const viewTableBtn = document.getElementById('viewTable');
                const viewGridBtn = document.getElementById('viewGrid');
                
                if (view === 'table') {
                    if (tableView) tableView.style.display = 'block';
                    if (gridView) gridView.style.display = 'none';
                    if (viewTableBtn) viewTableBtn.classList.add('active');
                    if (viewGridBtn) viewGridBtn.classList.remove('active');
                } else {
                    if (tableView) tableView.style.display = 'none';
                    if (gridView) gridView.style.display = 'block';
                    if (viewTableBtn) viewTableBtn.classList.remove('active');
                    if (viewGridBtn) viewGridBtn.classList.add('active');
